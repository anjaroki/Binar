<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rock Paper Scissors</title>
    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@600;665;800&display=swap" rel="stylesheet" />
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <!-- css saya -->
    <link rel="stylesheet" href="./style_play.css" />
  </head>
  <body>
    <div>
      <!-- navbar -->
      <div>
        <nav class="navbar navbar-expand-lg">
          <div class="container-fluid">
            <a class="navbar-brand ms-3 color-size-nav" href="/"><</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                <a class="nav-link mx-3" href="#">
                  <img src="/logo.png" alt="" srcset="" />
                </a>
                <a class="nav-link text-nav text-warning mt-2" href="#">ROCK PAPER SCISSORS</a>
              </div>
            </div>
          </div>
        </nav>
      </div>
      <!-- Baris 1-->
      <div class="row text-content text-black m-5">
        <div class="col d-flex justify-content-center"></div>
        <div class="col d-flex justify-content-center align-items-center">
          <h1 class="text-nav">PLAYER 1</h1>
        </div>
        <div class="col d-flex justify-content-center"></div>
        <div class="col d-flex justify-content-center">
          <h1 class="text-nav">COM</h1>
        </div>
        <div class="col d-flex justify-content-center"></div>
      </div>

      <!-- Baris 2-->
      <div class="row m-2 p-2 mt-5">
        <div class="col d-flex justify-content-center"></div>
        <!-- Player 1 -->
        <div class="col d-flex justify-content-center align-items-center">
          <div id="latarBatu" class="d-flex align-items-center justify-content-center">
            <img id="batu" src="/batu.png" onclick="pilBatu()" />
          </div>
        </div>
        <div class="col d-flex justify-content-center"></div>
        <!-- Player COM -->
        <div class="col d-flex justify-content-center align-items-center">
          <div id="latarBatuC" class="d-flex align-items-center justify-content-center">
            <img id="batuC" src="/batu.png" />
          </div>
        </div>
        <div class="col d-flex justify-content-center"></div>
      </div>

      <!-- Baris 3-->
      <div class="row m-2 p-2 mt-5">
        <div class="col d-flex justify-content-center align-items-center"></div>
        <!-- Player 1 -->
        <div class="col d-flex justify-content-center align-items-center align-items-center">
          <div id="latarKertas" class="d-flex align-items-center justify-content-center">
            <img id="kertas" src="/kertas.png" onclick="pilKertas()" />
          </div>
        </div>
        <!-- Hasil -->
        <div class="col d-flex justify-content-center align-items-center align-items-center">
          <div>
            <img src="/VS.png" class="picHasil" />
          </div>
        </div>
        <!-- Player COM -->
        <div class="col d-flex justify-content-center align-items-center align-items-center">
          <div id="latarKertasC" class="d-flex align-items-center justify-content-center">
            <img id="kertasC" src="/kertas.png" />
          </div>
        </div>
        <div class="col d-flex justify-content-center align-items-center"></div>
      </div>

      <!-- Baris 4-->
      <div class="row m-2 P-2 mt-5">
        <div class="col d-flex justify-content-center"></div>
        <!-- Player 1 -->
        <div class="col d-flex justify-content-center align-items-center">
          <div id="latarGunting" class="d-flex align-items-center justify-content-center">
            <img id="gunting" src="/gunting.png" onclick="pilGunting()" />
          </div>
        </div>
        <div class="col d-flex justify-content-center"></div>
        <!-- Player COM -->
        <div class="col d-flex justify-content-center align-items-center align-items-center">
          <div id="latarGuntingC" class="d-flex align-items-center justify-content-center">
            <img id="guntingC" src="/gunting.png" />
          </div>
        </div>
        <div class="col d-flex justify-content-center"></div>
      </div>

      <!-- Baris 5-->
      <div class="row m-2 mt-5">
        <div class="col"></div>
        <div class="col"></div>
        <div class="col d-flex justify-content-center">
          <img onclick="window.location.reload()" src="/refresh.png" />
        </div>
        <div class="col"></div>
        <div class="col"></div>
      </div>
    </div>
    <script src="./js_play.js"></script>
  </body>
</html>
